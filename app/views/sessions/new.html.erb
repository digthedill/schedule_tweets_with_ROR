<h1>Sign In </h1>


<%= form_with url: sign_in_path do |f| %>

<div class="form-group w-50 center">
    <div class="mb-3">
        <%= f.label :email  %>
        <%= f.text_field :email, class: "form-control"%>
    </div>
    <div class="mb-3">
        <%= f.label :password%>
        <%= f.password_field :password, class: "form-control"%>
        <%= link_to "Forgot your password?", password_reset_path  %>
    </div>
    <div class="mb-3">
        <%= f.submit value: "Sign In", class: "btn btn-primary"%>
    </div>
</div>

<%end%>