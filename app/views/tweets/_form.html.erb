<%= form_with model: tweet do |f| %>
<%= render 'shared/form_errors', f: f %>

<div class="mb-3">
    <%= f.label :twitter_account_id %>
    <%= f.collection_select :twitter_account_id, Current.user.twitter_accounts, :id, :username, {}, class: "form-control" %>
    <%= link_to "Sync up your Twitter", '/auth/twitter/', class: '' %>
</div>

<div class="mb-3">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control" %>
</div>

<div class="mb-3">
    <%= f.label :published_at %>
    <div class="form-control">
        <%= f.datetime_select :published_at %>
    </div>
</div>

<div>
    <%= f.button "Schedule", class: "btn btn-primary" %>
</div>

<% if f.object.persisted? %>
<div>
    <%= button_to "Delete", f.object, method: :delete, data: { confirm: "Are you sure?"}, class: 'btn btn-outline-danger' %>
</div>
<% end %>


<% end %>