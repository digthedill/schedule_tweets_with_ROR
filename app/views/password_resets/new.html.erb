<h1>Forgot Your Password</h1>

<%= form_with url: password_reset_path do |f| %>
<div class="form-group">
    <div class="mb-3">
        <%= f.label :email  %>
        <%= f.text_field :email, class: "form-control"%>
    </div>
    <div class="mb-3">
        <%= f.submit value: "Reset Password", class: "btn btn-primary"%>
    </div>
</div>
<%end%>